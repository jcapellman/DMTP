@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@model DMTP.REST.Models.Users.CreateEditUserModel

@{
    ViewData["Title"] = Localizer["PageTitle"];
}

<h3>@Localizer["Header"]</h3>

<form method="post" asp-controller="Users" asp-action="AttemptCreate" class="form-signin">
    <div class="form-label-group">
        <label>@Localizer["FirstNameLabel"]</label>
        <input class="form-control" type="text" asp-for="FirstName" required />
    </div>

    <div class="form-label-group">
        <label>@Localizer["LastNameLabel"]</label>
        <input class="form-control" type="text" asp-for="LastName" required />
    </div>

    <div class="form-label-group">
        <label>@Localizer["EmailAddressLabel"]</label>
        <input class="form-control" type="text" asp-for="EmailAddress" required />
    </div>

    <div class="form-label-group">
        <label>@Localizer["PasswordLabel"]</label>
        <input class="form-control" type="password" asp-for="Password" required />
    </div>

    <div class="form-label-group">
        <label>@Localizer["RoleLabel"]</label>
        <select asp-for="SelectedRole" class="form-control" asp-items="Model.Roles"></select>
    </div>

    <input type="submit" value="@Localizer["CreateButtonLabel"]" class="btn btn-lg btn-primary btn-block text-uppercase" />
</form>