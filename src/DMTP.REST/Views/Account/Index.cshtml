@model DMTP.REST.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="row">
<div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
<div class="card card-signin my-5">
<div class="card-body">
    <h5 class="card-title text-center">Login</h5>
<form method="post" asp-controller="Account" asp-action="AttemptLogin" class="form-signin">
    <div class="form-label-group">
        <input class="form-control" type="email" asp-for="Username" required autofocus />
        <label asp-for="Username"></label>
    </div>

    <div class="form-label-group">
        <input class="form-control" type="password" asp-for="Password" />
        <label asp-for="Password"></label>
    </div>

    <input type="submit" value="Login" class="btn btn-lg btn-primary btn-block text-uppercase"/>
</form>