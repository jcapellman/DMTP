@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@model DMTP.REST.Models.CreateUserModel

@{
    ViewData["Title"] = Localizer["PageTitle"];
    Layout = "~/Views/Shared/_LayoutUnauthenticated.cshtml";
}

<div class="col-sm-9 col-md-7 col-lg-5 mx-auto align-self-center">
    <div class="card card-signin my-5">
        <div class="card-body rounded">
            <h5 class="card-title text-center">DMTP</h5>
            <form method="post" asp-controller="Account" asp-action="AttemptCreate" class="form-signin">
                <div class="form-label-group">
                    <label>@Localizer["EmailAddressLabel"]</label>
                    <input class="form-control" type="email" asp-for="EmailAddress" required autofocus />
                </div>

                <div class="form-label-group">
                    <label>@Localizer["FirstNameLabel"]</label>
                    <input class="form-control" type="text" asp-for="FirstName" required />
                </div>

                <div class="form-label-group">
                    <label>@Localizer["LastNameLabel"]</label>
                    <input class="form-control" type="text" asp-for="LastName" required />
                </div>

                <div class="form-label-group">
                    <label>@Localizer["PasswordLabel"]</label>
                    <input class="form-control" type="password" asp-for="Password" />
                </div>

                <input type="submit" value="@Localizer["CreateAccountButton"]" class="btn btn-lg btn-primary btn-block text-uppercase" />

                <br />

                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger">
                        @Model.ErrorMessage
                    </div>
                }

                <div class="container text-center">
                    &copy; 2019 - <a href="http://www.jarredcapellman.com/">Jarred Capellman</a> <br /> source code on <a href="https://github.com/jcapellman/DMTP">GitHub</a>
                </div>
            </form>
        </div>
    </div>
</div>