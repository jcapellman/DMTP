@model DMTP.REST.Models.Settings.SettingsDashboardModel

<h3>Settings</h3>

<br/>

@if (!string.IsNullOrEmpty(Model.ActionMessage))
{
    <div class="alert alert-primary">
        @Model.ActionMessage
    </div>
}

<form method="post" asp-controller="Settings" asp-action="AttemptUpdate" class="form-signin form">
    <input type="hidden" asp-for="@Model.Setting.ID" />

    <h5 class="text-white">SMTP Settings</h5>
    <div class="form-label-group">
        <label>Host Name</label>
        <input class="form-control" type="text" asp-for="@Model.Setting.SMTPHostName" required />
    </div>

    <div class="form-label-group">
        <label>Port Number</label>
        <input class="form-control" type="text" asp-for="@Model.Setting.SMTPPortNumber" required />
    </div>

    <div class="form-label-group">
        <label>User Name</label>
        <input class="form-control" type="text" asp-for="@Model.Setting.SMTPUsername" required />
    </div>

    <div class="form-label-group">
        <label>Password</label>
        <input class="form-control" type="text" asp-for="@Model.Setting.SMTPPassword" required />
    </div>

    <br />

    <h5 class="text-white">Misc Settings</h5>

    <div class="form-label-group">
        <label asp-for="Setting.AllowNewUserCreation">Allow New User Creation</label>
        <input class="form-control" type="checkbox" asp-for="@Model.Setting.AllowNewUserCreation" />
    </div>

    <div class="form-label-group">
        <label asp-for="GenerateNewRegistrationKey">Generate new Registration Key</label>
        <input class="form-control" type="checkbox" asp-for="@Model.GenerateNewRegistrationKey"/>
    </div>

    <br />

    <input type="submit" value="Update Settings" class="btn btn-lg btn-primary btn-block text-uppercase" />
</form>