@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@model DMTP.REST.Models.Setup.SetupModel

@{
    Layout = "~/Views/Shared/_LayoutUnauthenticated.cshtml";
    ViewData["Title"] = Localizer["PageTitle"];
}

<h3>@Localizer["Header"]</h3>

@if (!string.IsNullOrEmpty(Model.ActionMessage))
{
    <div class="alert alert-primary">
        @Model.ActionMessage
    </div>
}

<form method="post" asp-controller="Setup" asp-action="AttemptSetup" class="form-signin form">
    <h5 class="text-white">@Localizer["AdministratorAccountHeader"]</h5>
    <div class="form-label-group">
        <label>@Localizer["FirstNameLabel"]</label>
        <input class="form-control" type="text" asp-for="@Model.FirstName" required />
    </div>

    <div class="form-label-group">
        <label>@Localizer["LastNameLabel"]</label>
        <input class="form-control" type="text" asp-for="@Model.LastName" required />
    </div>

    <div class="form-label-group">
        <label>@Localizer["EmailAddressLabel"]</label>
        <input class="form-control" type="text" asp-for="@Model.EmailAddress" required />
    </div>

    <div class="form-label-group">
        <label>@Localizer["PasswordLabel"]</label>
        <input class="form-control" type="text" asp-for="@Model.Password" required />
    </div>

    <br />

    <h5 class="text-white">@Localizer["SMTPSettingsHeader"]</h5>
    <div class="form-label-group">
        <label>@Localizer["HostNameLabel"]</label>
        <input class="form-control" type="text" asp-for="@Model.SMTPHostName" />
    </div>

    <div class="form-label-group">
        <label>@Localizer["PortNumberLabel"]</label>
        <input class="form-control" type="text" asp-for="@Model.SMTPPortNumber" />
    </div>

    <div class="form-label-group">
        <label>@Localizer["UserNameLabel"]</label>
        <input class="form-control" type="text" asp-for="@Model.SMTPUsername" />
    </div>

    <div class="form-label-group">
        <label>@Localizer["PasswordLabel"]</label>
        <input class="form-control" type="password" asp-for="@Model.SMTPPassword" />
    </div>

    <br />

    <h5 class="text-white">@Localizer["MiscSettingsLabel"]</h5>

    <div class="form-label-group">
        <label asp-for="AllowUserCreation">@Localizer["AllowNewUserCreationLabel"]</label>
        <input class="form-control" type="checkbox" asp-for="@Model.AllowUserCreation" />
    </div>

    <br />

    <input type="submit" value="@Localizer["CompleteSetupButton"]" class="btn btn-lg btn-primary btn-block text-uppercase" />
</form>